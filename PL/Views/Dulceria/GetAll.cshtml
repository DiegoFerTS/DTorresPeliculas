@model ML.Dulceria
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<style>
    .card__container {
        margin-bottom: 30px;
    }

    .fa-cart-shopping:hover {
        cursor: pointer;
    }

    .buttons__container {
        padding-top: 7px;
        display: flex;
        align-content: center;
        align-items: center;
        justify-content: center;
        justify-items: center;
    }

    .shopping {
        float: left;
        height: 100%;
        margin-top: 5px;
    }

    .texto__shopping {
        height: 100%;
        float: left;
        color: white;
        margin-top: 5px;
        font-size: 20px;
    }

    .modal {
        display: none; /* Por defecto, estará oculto */
        position: fixed; /* Posición fija */
        z-index: 1; /* Se situará por encima de otros elementos de la página*/
        padding-top: 20px; /* El contenido estará situado a 200px de la parte superior */
        left: 0;
        top: 0;
        width: 100%; /* Ancho completo */
        height: 100%; /* Algura completa */
        overflow: auto; /* Se activará el scroll si es necesario */
        background-color: rgba(0,0,0,0.5); /* Color negro con opacidad del 50% */
        border-radius: 5px;
    }

    .content__modal {
        position: relative; /* Relativo con respecto al contenedor -modal- */
        margin: auto; /* Centrada */
        border-radius: 5px;
        padding: 20px;
        width: 40%;
    }

</style>





<h2 class="text-center">Dulceria</h2>
<hr />
<br />

@if (Model.Productos.Count > 0)
{

    <div class="row">

        @foreach (ML.Dulceria dulceria in Model.Productos)
        {

            <div class="col-4">
                <div class="card__container" style="height: 100vh; border-radius: 5px; border: 3px solid black;">
                    <div class="card__image" style="width: 100%;
                                                height: 50%;
                                                background-image: url('@dulceria.Imagen');
                                                background-repeat: no-repeat;
                                                background-size: 100% 100%;
                                                border: 1px solid black;"> </div>
                    <div class="title__container" style="width: 100%; height: 10%; color: white; background: #E30000; padding: 10px;">
                        <h2 class="text-center">@dulceria.Nombre</h2>
                    </div>
                    <div class="info_container" style="width: 100%; height: 30%; color: white; background: #FF0000; padding: 10px;">
                        <p>
                            Precio: $@dulceria.Precio pesos
                            <br /><br />
                            Descripcion: @dulceria.Descripcion
                        </p>
                    </div>
                    <div class="buttons__container text-center" style="width: 100%; height: 10%; background: #001397;">
                        <div class="shopping">
                            <a href="@Url.Action("AddCarrito", "Dulceria", new{idProducto = @dulceria.Id})"><i class="fa-solid fa-cart-shopping" style="color: #ffffff; width: 40px; height: 40px;"> </i></a>
                        </div>
                        <div class="texto__shopping">
                            <p>Agregar al carrito</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


}
else
{
    <div class="alert alert-danger"> No se encontraron productos en dulceria.</div>
}